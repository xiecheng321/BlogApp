@model BlogApp.Models.Author
@{
    ViewData["Title"] = "作家中心";
}

<div style="max-width:420px;margin:48px auto;background:#fff;padding:36px 36px;border-radius:12px;box-shadow:0 2px 18px #eee;">
    <h2 style="text-align:center;">作家中心</h2>
    <div style="margin-bottom:16px;">
        <strong>笔名：</strong> @Model.PenName
    </div>
    <div style="margin-bottom:16px;">
        <strong>简介：</strong> @Model.Bio
    </div>
    <!-- 你后续可以在这里添加作品管理等入口 -->
    <a href="/" class="btn btn-secondary" style="width:100%;">返回首页</a>
</div>
