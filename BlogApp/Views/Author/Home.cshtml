@{
    Layout = "_AuthorLayout";
}


@model BlogApp.Models.Author

<!-- 背景装饰，可自定义 -->
<div style="
    position:fixed;
    left:0;top:0;right:0;bottom:0;
    z-index:-1;
    background: radial-gradient(circle at 60% 40%, #f0f6ff 60%, #fff 100%);
"></div>

<div style="display:flex;justify-content:center;align-items:center;height:82vh;">
    <div style="
        background: #fff;
        border-radius: 32px;
        box-shadow: 0 8px 48px rgba(60,130,255,0.12), 0 1.5px 8px #dde8f3;
        padding: 48px 72px 60px 72px;
        text-align: center;
        min-width: 440px;
        min-height: 340px;
        position:relative;
        overflow: visible;
        ">

        <!-- 欢迎大字 -->
        <div style="font-size:2.3rem; font-weight:900; color:#223b55; letter-spacing:2px; margin-bottom:8px;">
            你好，@Model.User.UserName
        </div>
        <div style="font-size:1.12rem; color:#6c7a93; margin-bottom:36px; letter-spacing:1px;">
            欢迎来到 <span style="font-weight:bold;color:#41c2ff;">作家专区</span>
        </div>

        <div style="display:flex; justify-content:center; gap:38px; margin-bottom:0;">
            <!-- 作品管理按钮 -->
            <a href="/Author/Works" class="main-btn blue">作品管理</a>

            <!-- 立即写作按钮（有作品时指向第一个，没有作品时引导新建） -->
            @if (Model.Novels != null && Model.Novels.Count > 0)
            {
                <a href="/Chapter/Write?novelId=@Model.Novels.First().Id" class="main-btn green">立即写作</a>
            }
            else
            {
                <a href="/Novel/Create" class="main-btn green">立即写作</a>
            }

            <!-- 工作台按钮 -->
            <a href="/Author/Me" class="main-btn gray">工作台</a>
        </div>
    </div>
</div>

<!-- 按钮样式 -->
<style>
    .main-btn {
        display: inline-block;
        padding: 18px 38px;
        font-size: 1.28rem;
        border-radius: 14px;
        border: none;
        font-weight: 700;
        letter-spacing: 2px;
        box-shadow: 0 2px 12px #e8eff9;
        margin-top: 6px;
        transition: all .21s cubic-bezier(.33,.66,.6,1.23);
        text-decoration: none;
        background: #f8fafd;
        color: #276ee6;
        border: 2px solid #b6daff;
        position: relative;
    }

        .main-btn:hover {
            transform: translateY(-4px) scale(1.04);
            box-shadow: 0 8px 32px #aad3fc63, 0 1.5px 8px #dde8f3;
            z-index: 2;
            background: #ecf4ff;
            text-decoration: none;
        }

        .main-btn.blue {
            color: #276ee6;
            border-color: #b6daff;
            background: #f7fbff;
        }

        .main-btn.green {
            color: #14b97d;
            border-color: #87ecc9;
            background: #f8fffb;
        }

        .main-btn.gray {
            color: #77808e;
            border-color: #d0dde7;
            background: #f8fafd;
        }

        .main-btn.blue:hover {
            color: #fff;
            background: linear-gradient(90deg,#3bb6ff 20%,#47d5f7 95%);
        }

        .main-btn.green:hover {
            color: #fff;
            background: linear-gradient(90deg,#1edaab 12%,#4beeb9 90%);
        }

        .main-btn.gray:hover {
            color: #fff;
            background: linear-gradient(90deg,#7e99b7 22%,#b9c7df 92%);
        }
</style>
