@*



@{
    ViewData["Title"] = "添加章节";
    var novels = ViewBag.Novels as List<BlogApp.Models.Novel>;
}

<h2>添加章节</h2>

<!-- 提交表单，方法是 POST，目标是当前 Controller 的 Create 方法 -->
<form method="post" asp-action="Create">
    <!-- 小说下拉选择框 -->
    <div>
        <label>所属小说：</label>
        <select name="NovelId" required>
        @foreach (var novel in ViewBag.Novels as List<BlogApp.Models.Novel>)
        {
            var selectedAttr = (ViewBag.DefaultNovelId == novel.Id) ? " selected" : "";
            @:<option value="@novel.Id"@selectedAttr>@novel.Title</option>
        }
        </select>


    </div>

    <!-- 章节标题输入框 -->
    <div>
        <label>章节标题：</label>
        <input type="text" name="Title" required />
    </div>

    <!-- 正文内容：多行文本 -->
    <div>
        <label>章节内容：</label><br />
        <textarea name="Content" rows="20" cols="80" required></textarea>
    </div>

    <!-- 提交按钮 -->
    <button type="submit">提交章节</button>
</form>

*@
