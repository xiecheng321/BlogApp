@model BlogApp.Models.Novel
@{
    ViewData["Title"] = Model.Title + " - 章节管理";
}

<div style="margin-bottom:26px;">
    <a href="/Author/Works" style="color:#188ddc;font-size:1.09rem;text-decoration:underline;">← 返回作品管理</a>
@*

</div>

<div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:24px;">
    <div style="font-size:1.35rem;font-weight:700;">
        《@Model.Title》章节管理
    </div>
    <a href="/Chapter/Create?novelId=@Model.Id" style="background:linear-gradient(90deg,#41c2ff 12%,#47e1ff 92%);color:#fff;padding:7px 26px;border-radius:8px;font-size:1.07rem;font-weight:700;box-shadow:0 2px 10px #e7f5fd;text-decoration:none;">
        + 新增章节
    </a>
</div>

@if (Model.Chapters != null && Model.Chapters.Count > 0)
{
    <table style="width:100%;background:#f8fafc;border-radius:10px;box-shadow:0 2px 14px #f2f5fa;">
        <thead>
            <tr style="color:#637089;font-size:1rem;">
                <th style="padding:11px 8px;">章节标题</th>
                <th style="padding:11px 8px;">创建时间</th>
                <th style="padding:11px 8px;">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var chapter in Model.Chapters.OrderBy(c => c.Id))
            {
                <tr style="border-top:1px solid #f0f2f6;">
                    <td style="padding:10px 8px;">@chapter.Title</td>
                    <td style="padding:10px 8px;color:#888;">@chapter.CreateTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td style="padding:10px 8px;">
                        <a href="/Chapter/Edit/@chapter.Id" style="color:#0c86e2;font-size:1.01rem;margin-right:16px;">编辑</a>
                        <form method="post" action="/Chapter/Delete/@chapter.Id" style="display:inline;" onsubmit="return confirm('确定要删除此章节吗？');">
                            <button type="submit" style="color:#d24d57;background:none;border:none;cursor:pointer;font-size:1.01rem;">删除</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div style="color:#aaa;font-size:1.1rem;padding:38px 0;text-align:center;">暂未添加任何章节，快去写第一章吧！</div>
}

*@
