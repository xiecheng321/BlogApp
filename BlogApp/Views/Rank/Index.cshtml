<!-- 排行榜Tab切换功能脚本，建议直接放在页面底部（也可以挪到js文件中） -->
<script>
    function showRank(idx) {
        var tabs = document.querySelectorAll('#rankTabs .rank-tab');
        var lists = document.querySelectorAll('#rankContents .rank-list');
        tabs.forEach((t, i) => t.classList.toggle('active', i === idx));
        lists.forEach((l, i) => l.style.display = (i === idx ? "block" : "none"));
    }
</script>
<style>
    .rank-tab {
        padding: 6px 18px;
        border-radius: 16px;
        font-size: 16px;
        font-weight: 500;
        cursor: pointer;
        color: #232328;
        background: none;
        transition: background 0.2s, color 0.2s;
    }

        .rank-tab.active {
            background: #e8352f;
            color: #fff;
        }

        .rank-tab:hover:not(.active) {
            background: #eee;
        }
</style>
