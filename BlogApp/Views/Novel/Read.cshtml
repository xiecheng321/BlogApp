@model BlogApp.Models.Novel

<h2>@Model.Title</h2>
<p>@Model.Description</p>

@if (Model.Chapters != null && Model.Chapters.Count > 0)
{
    <h3>章节列表</h3>
    <ul>
        @foreach (var chapter in Model.Chapters)
        {
            <li>
                <a asp-controller="Chapter" asp-action="Details" asp-route-id="@chapter.Id">
                    @chapter.Title
                </a>
            </li>
        }
    </ul>
}
else
{
    <p>暂无章节</p>
}
