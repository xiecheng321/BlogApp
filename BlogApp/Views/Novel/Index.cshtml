@*

@model List<BlogApp.Models.Novel>

<h2>书籍列表</h2>

@if (Model.Count == 0)
{
    <p>暂无书籍，请先创建。</p>
}
else
{
    <ul>
        @foreach (var novel in Model)
        {
            <li>
                <a href="/Novel/Details/@novel.Id">@novel.Title</a>
                <span> - @novel.Description</span>
            </li>
        }
    </ul>
}
<a href="/Novel/Create" class="btn btn-success">创建新书</a>
*@
