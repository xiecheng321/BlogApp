@model BlogApp.Models.User
@{
    ViewData["Title"] = "个人信息";
}

<div style="max-width:420px;margin:48px auto;background:#fff;padding:36px 44px;border-radius:12px;box-shadow:0 2px 18px #eee;">
    <h2 style="text-align:center;margin-bottom:24px;">个人信息</h2>

    <!-- 信息只读展示区 -->
    <div style="margin-bottom:16px;">用户名：@Model.UserName</div>
    <div style="margin-bottom:16px;">签名：@Model.Bio</div>
    <div style="margin-bottom:16px;">性别：@Model.Gender</div>
    <div style="margin-bottom:16px;">年龄：@Model.Age</div>
    <div style="margin-bottom:16px;">
        头像：<br />
        @if (!string.IsNullOrEmpty(Model.AvatarUrl))
        {
            <img src="@Model.AvatarUrl" width="80" />
        }
    </div>

    <!-- 修改按钮跳转到编辑页 -->
    <form method="get" action="/Account/EditProfile">
        <button type="submit" class="btn btn-danger" style="width:100%;">修改信息</button>
    </form>

    <!-- 保存成功提示，只出现一次 -->
    @if (ViewBag.Msg != null)
    {
        <div style="color:green;margin-top:10px;">@ViewBag.Msg</div>
    }
</div>
